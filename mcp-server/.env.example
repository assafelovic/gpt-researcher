# OpenAI API key for GPT models (required)
OPENAI_API_KEY=open-api-key-here

# Tavily API key for web search (required)
TAVILY_API_KEY=tavily-api-key-here

# GPT Researcher configuration
# Embedding model (required)
EMBEDDING=openai:text-embedding-3-small

# LLM for fast research (required)
FAST_LLM=openai:gpt-4o-mini

# LLM for smart research (required)
SMART_LLM=openai:gpt-4o-2024-11-20

# LLM for strategic research (required)
STRATEGIC_LLM=openai:gpt-4o-mini

# Optional: Anthropic API key if using Claude
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Maximum number of research iterations
MAX_ITERATIONS=2

# Server configuration
LOG_LEVEL=INFO
PORT=8000 